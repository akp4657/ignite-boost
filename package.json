{
  "name": "IB",
  "version": "1.0.0",
  "engines": {
    "node": "12.16.0",
    "npm": "6.13.7"
  },
  "description": "Video database for Dengeki Bunko Fighting Climax: Ignition",
  "main": "./server/app.js",
  "scripts": {
    "buildLoginBundle": "babel ./client/login ./client/helper --presets @babel/preset-react --out-file ./hosted/loginBundle.js",
    "buildAppBundle": "babel ./client/app ./client/helper --presets @babel/preset-react --out-file ./hosted/bundle.js",
    "obfuscateLoginBundle": "javascript-obfuscator ./hosted/loginBundle.js --output ./hosted/loginBundle.obfuscated.js",
    "obfuscateAppBundle": "javascript-obfuscator ./hosted/bundle.js --output ./hosted/bundle.obfuscated.js",
    "build": "npm run buildLoginBundle && npm run buildAppBundle && npm run obfuscateLoginBundle && npm run obfuscateAppBundle",
    "watchLoginBundle": "babel --watch ./client/login ./client/helper --presets @babel/preset-react --out-file ./hosted/loginBundle.js",
    "watchAppBundle": "babel --watch ./client/app ./client/helper --presets @babel/preset-react --out-file ./hosted/bundle.js",
    "nodemon": "nodemon --watch ./server ./server/app.js",
    "start": "node ./server/app.js",
    "pretest": "eslint ./server --fix",
    "test": "echo \"Tests complete\""
  },
  "keywords": [
    "Node",
    "MVC",
    "Redis",
    "DFC:I",
    "Database",
    "ignite-boost",
    "fighting games"
  ],
  "author": "Anthony Pichardo",
  "license": "Apache 2.0",
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.2",
    "javascript-obfuscator": "^4.1.1",
    "nodemon": "^2.0.15"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "connect-redis": "^4.0.4",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.7-alpha.3",
    "express-handlebars": "^3.1.0",
    "express-session": "^1.17.0",
    "helmet": "^3.22.0",
    "mongoose": "^5.9.7",
    "nodemailer": "^6.7.2",
    "redis": "^3.1.2",
    "serve-favicon": "^2.5.0",
    "underscore": "^1.13.2",
    "validator": "^13.12.0",
    "youtube-api": "^2.0.10"
  }
}
